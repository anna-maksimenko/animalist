<div class="insta-scroller-to-clone">
    <div class="shg-ig-x">
      <div class="insta-heading">
        <a target="_blank" href="{{section.settings.link}}"><h3>{{section.settings.reference}}</h3></a>
        <h2>{{section.settings.heading}}</h2>
      </div>
      <div class="shg-ig-posts-container owl-carousel owl-theme" id="instafeed" data-access-token="{{ settings.instagram_access_token }}" data-user-id="{{ settings.instagram_user_id }}">
      </div>
    </div>
</div>
<div class="instagram-scroller-injection-point"></div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js" defer="defer"></script>
<script src="{{ 'insta-scroller.min.js' | asset_url }}" defer="defer"></script>
{% comment %} <script src="{{ 'insta-scroller.js' | asset_url }}" defer="defer"></script> {% endcomment %}
{% comment %} <script src="https://cdn.jsdelivr.net/npm/body-scroll-lock@2.6.4/lib/bodyScrollLock.min.js"></script> {% endcomment %}
{% schema %}
  {
    "name": "Instagram scroller",
	"settings": [
		{
			"id":"reference",
			"label":"Reference text",
			"type":"text",
			"default":"@dogmade"
		},
		{
			"id":"heading",
			"label":"Heading text",
			"type":"text",
			"default":"Follow us on instagram"
		},
		{
			"id":"link",
			"label":"Link to instagram account",
			"type":"text"
		}
	]
  }
{% endschema %}

{% stylesheet %}
	.instagram-scroller-to-clone{
        display: none;
    }

    .shg-ig-x {
        overflow-x: hidden;
        background-color: #fff;
    }

    .shg-ig-x .insta-heading{
	  padding: 80px;
	  text-align: center;
      font-size: 0.85em;
	}

	@media (max-width: 640px){
	  .shg-ig-x .insta-heading{
        padding: 80px 10px;
	  }
	}

	.shg-ig-x .insta-heading h2{
        margin-bottom: 0;
	  }

	.shg-ig-x .insta-heading h3{
      font-size: 12px;
      text-transform: uppercase;
      letter-spacing: 0.25em;
	}

	.shg-ig-x .insta-heading a{
      text-decoration: none;
	}

	.shg-ig-x .insta-heading a h3{
		transition: transform 0.3s;
	}

	.shg-ig-x .insta-heading a:hover h3{
      transform: scale(1.05, 1.05);
	}

    .shg-ig-x .shg-ig-posts-container {
        /*display: flex;
        flex-wrap: wrap;
        width: calc(100% + 0px) !important;*/
    }


    .shg-ig-x .shg-ig-posts-container>.shg-ig-posts {
		position: relative;
        box-sizing: border-box;
        height: 100%;
        width: 50%;
        padding-right: 0px;
    }

    .shg-ig-x .shg-ig-posts-container .shg-ig-posts .shg-ig-posts-link {
        text-decoration: none;
        display: block;
        height: 100%;
    }

    .shg-ig-x .shg-ig-posts-container .shg-ig-posts .shg-ig-posts-link .shg-ig-posts-image {
        height: 100%;
        width: 100%;
        display: block;
        object-fit: cover;
        display: block;
        position: absolute;
    }

	.shg-ig-posts-container .shg-ig-posts .shg-ig-posts-link .shg-ig-feed-overlay{
		position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        padding: 25px;
        background: white;
        color: #242424;
        text-align: left;
        opacity: 0;
        -webkit-transition: opacity 0.2s ease-in-out;
        transition: opacity 0.2s ease-in-out;
	}
    .shg-ig-posts-container .shg-ig-posts .shg-ig-posts-link .shg-ig-feed-overlay.nej{
		opacity:1;
	}

	.shg-ig-posts-container .shg-ig-posts .shg-ig-posts-link .shg-ig-feed-overlay .shg-ig-like-count{
		font-size: 13px;
	}

	.shg-ig-posts-container .shg-ig-posts .shg-ig-posts-link .shg-ig-feed-overlay .shg-ig-like-count .shg-ig-icon-heart{
	    margin-right: 8px;
        width: 17px;
        height: 15px;
        vertical-align: sub;
		fill: #242424;
	}

	.shg-ig-posts-container .shg-ig-posts .shg-ig-posts-link .shg-ig-feed-overlay .shg-ig-caption{
        position: relative;
		font-size: 14px;
		line-height: 1.65;
        height: 6.6em;
        margin: 20px 0;
        overflow: hidden;
        word-break: break-word;
	}

	.shg-ig-posts-container .shg-ig-posts .shg-ig-posts-link .shg-ig-feed-overlay .shg-ig-caption:after{
        position: absolute;
        content: '';
        right: 0;
        bottom: 0;
        width: 70%;
        height: 1.6em;
        text-align: right;
		background: -webkit-linear-gradient(left, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 50%);
        background: linear-gradient(to right, rgba(255,255,255,0), #ffffff 50%);
	}

    @media (min-width: 768px) {
        .shg-ig-x .shg-ig-posts-container>.shg-ig-posts {
            width: 25.0%;
        }
    }

	
	.shg-ig-x .owl-carousel .owl-nav button.owl-next, .shg-ig-x .owl-carousel .owl-nav button.owl-prev, .shg-ig-x .owl-carousel button.owl-dot {
        pointer-events: initial;
        background: white !important;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        font-size: 2.5em;
    	line-height: 1.6;
        -webkit-box-shadow: 18px 18px 19px rgba(0, 0, 0, 0.1);
        -moz-box-shadow: 18px 18px 19px rgba(0, 0, 0, 0.1);
        box-shadow: 18px 18px 19px rgba(0, 0, 0, 0.1);
		transition: transform 0.3s;
		display: flex;
        justify-content: center;
        align-items: center;
    }
	.shg-ig-x .owl-carousel .owl-nav button.owl-next:hover, .shg-ig-x .owl-carousel .owl-nav button.owl-prev:hover{
		-webkit-transform: scale(1.05, 1.05);
		transform: scale(1.05, 1.05);
	}
	.shg-ig-x .owl-carousel .owl-nav {
		position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        pointer-events: none;
        display: flex;
        justify-content: space-between;
        padding: 20px;
        align-items: center;
	}
	.shg-ig-x .owl-carousel .owl-nav button svg{
		transform: rotate(90deg);
		margin-right: -3px;
        stroke: #ffffff;
        stroke-width: 2.2px;
        width: 21px;
        height: 21px;
		margin-top: 1px;
	}
	.shg-ig-x .owl-carousel .owl-nav button.owl-prev svg{
		transform: rotate(-90deg);
		margin-left: -7px;
	}
    .shg-ig-x .owl-carousel .owl-item{
		overflow: hidden;
        height: 100%;
	}
	.shg-ig-x .owl-carousel .owl-item .shg-ig-posts.item{
		margin: 0;
        height: 0;
        padding-bottom: 124.8418%;
	}
{% endstylesheet %}
